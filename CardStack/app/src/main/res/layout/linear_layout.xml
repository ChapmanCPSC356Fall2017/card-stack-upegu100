<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:onClick="onScreenClick">

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/ll_upperCorner"
        android:layout_width ="wrap_content"
        android:layout_height = "wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_upperNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/A"/>

        <ImageView
            android:id="@+id/iv_upperSuit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:src="@drawable/club_image"/>

    </LinearLayout>

    <ImageView
        android:layout_weight="9"
        android:id="@+id/iv_centerSuit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:layout_gravity="center"
        android:src="@drawable/club_image"/>

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/ll_lowerCorner"
        android:layout_width ="wrap_content"
        android:layout_height = "wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/iv_lowerSuit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:rotation="180"
            android:src="@drawable/club_image"/>

        <TextView
            android:id="@+id/tv_lowerNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:rotation="180"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/A"/>

    </LinearLayout>


</LinearLayout>
